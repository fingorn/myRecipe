<%= render 'shared/page_title', title: "Chefs Listing" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <!-- by default, it will paginate the only available resource if no variable is 
    given, example @chefs in this case since @chef is the only variable 
    avalabile in the controller action -->
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
      <p><h5>Chef name:<%= chef.chefname %></h5></p>
    </div>
  </div>

<% end %>